{
  "_comment" : "inspired by https://github.com/polarmobile/coffeescript-style-guide/blob/master/coffeelint.json",

  "coffeescript_error": {
    "level": "error"
  },

  "arrow_spacing": {
    "level": "error"
  },

  "space_operators" : {
    "level" : "error"
  },

  "colon_assignment_spacing": {
    "name": "colon_assignment_spacing",
    "level": "warn",
    "spacing": {
      "left": 0,
      "right": 1
    }
  },

  "no_tabs": {
    "name": "no_tabs",
    "level": "error"
  },

  "no_trailing_whitespace": {
    "name": "no_trailing_whitespace",
    "level": "warn",
    "allowed_in_comments": false,
    "allowed_in_empty_lines": true
  },

  "no_trailing_semicolons": {
    "name": "no_trailing_semicolons",
    "level": "error"
  },

  "max_line_length": {
    "name": "max_line_length",
    "value": 100,
    "level": "warn",
    "limitComments": true
  },

  "indentation" : {
    "level" : "error",
    "value" : 2
  },

  "camel_case_classes": {
    "name": "camel_case_classes",
    "level": "error"
  },


  "cyclomatic_complexity" : {
    "level" : "warn",
    "value" : 11
  },

  "line_endings" : {
    "value" : "unix",
    "level" : "error"
  },

  "no_empty_functions" : {
    "level" : "warn"
  },

  "no_implicit_braces" : {
    "level": "warn",
    "strict": false
  },

  "no_backticks": {
    "name": "no_backticks",
    "level": "error"
  },

  "no_stand_alone_at": {
    "level": "warn"
  },

  "no_empty_param_list": {
    "name": "no_empty_param_list",
    "level": "warn"
  },

  "duplicate_key": {
    "name": "duplicate_key",
    "level": "error"
  },

  "no_unnecessary_fat_arrows": {
    "name": "no_unnecessary_fat_arrows",
    "level": "warn"
  },
  "missing_fat_arrows": {
    "name": "missing_fat_arrows",
    "level": "warn"
  },

  "empty_constructor_needs_parens": {
    "name": "empty_constructor_needs_parens",
    "level": "ignore"
  },
  "non_empty_constructor_needs_parens": {
    "name": "non_empty_constructor_needs_parens",
    "level": "ignore"
  }
}
